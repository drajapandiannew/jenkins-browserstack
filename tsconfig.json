{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "typeScript",
        "typeRoots": [ "./node_modules/@types" ],
        "types": ["node","cucumber"],
        "lib": [
            "es2017",
            "dom",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "typescript"
    ]
}